{{#extends "base"}}

{{#block "content"}}
    <form method = "POST">
        <div>
            <label>Food name: </label>
            <input type "text" name= "foodName" class = "form-control"/>
        </div>
        <div>
            <label>Calories name: </label>
            <input type "text" name= "calories" class = "form-control"/>
        </div>
        <div>
            <label>Meal:</label>   
            <input type="radio" name="meal" value="breakfast" checked/><label>Breakfast</label>
            <input type="radio" name="meal" value="lunch"/><label>Lunch</label>
            <input type="radio" name="meal" value="dinner"/><label>Dinner</label> 
        </div>
        {{!-- Why is it when you check all the boxes, it will default check to the last item in the radio button list - 
        this is because its last touch for the code --}}
        <div>
            <label>Cuisine:</label>   
            <select class="form-control" name="cuisine">
                <option value = "chinese">Chinese</option>
                <option value = "western">Western</option>
                <option value = "japanese">Japanese</option>
            </select>
        </div>
        <input type="submit" class="btn btn-primary mt-3"> 
    </form>
{{/block}}

{{#block "title"}}
Home 
{{/block}}

{{/extends}}